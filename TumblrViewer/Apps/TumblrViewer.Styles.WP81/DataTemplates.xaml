                       Text="Link"/>
                <TextBlock Style="{StaticResource SmallTextStyle}"
                           HorizontalAlignment="Right"
                           Text="{Binding DaysAfterPublication}"/>
                <TextBlock Style="{StaticResource LabelStyle}"
                           Grid.Row="1"
                           Foreground="{StaticResource DefaultAccentBrush}"
                           Text="{Binding Slug}"/>
